<div class="card" style="width: 1200px;" id="cart">
    <ul class="list-group list-group-flush">
        {{#each products}}
        <li class="list-group-item p-0">
            <div style="display: flex;">
                <div style="width: 10px; background-color: #ffd700">
                </div>
                <div style="display: flex;">
                    {{#if product.thumbnail}}
                    <img src={{product.thumbnail}} width="150px" alt="img - {{product.thumbnail}}">
                    {{else}}
                    <img src="https://i.ibb.co/zsQdBNc/200x200.gif" width="150px" alt="img - no img">
                    {{/if}}
                    <div style="display: flex; justify-content: space-between">
                        <div style="display: flex; flex-direction: column">
                            <h5 class="m-0">{{product.category}} - {{product.title}}</h5>
                            <h6 class="m-0">Quantity: {{quantity}}</h6>
                            <div style="position: absolute; bottom: 20px;">
                                <h6 class="m-0">Subtotal: {{product.price}}U$D</h6>
                            </div>
                        </div>
                        <div class="delete" style="position: absolute; right: 0px;">
                            <button id={{product.id}} class="btn delete">Delete</button>
                        </div>
                    </div>
                </div>
            </div>
        </li>
        {{/each}}
    </ul>
</div>
{{#if products}}
<div style="width: 875px;" class="mt-3">
    <div style="display: flex">
        <b>Total:</b><p style="margin-left: 5px" id="amount">{{amount}}</p><p>U$D</p>
    </div>
</div>

<div style="width: 875px;" class="mt-3">
    <a href="{{id}}/purchase" type="button" class="btn btn-success">Purchase</a>
    <button id="checkout-btn" class="btn btn-primary" hidden>Purchase</button>
    <div id="wallet_container"></div>
</div>
{{/if}}